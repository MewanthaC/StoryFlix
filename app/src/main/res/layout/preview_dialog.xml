<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/contentBackgroundColor"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_gravity="center"
    android:layout_height="600dp">

    <LinearLayout
        android:layout_marginBottom="85dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:src="@color/color_primary"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circular" />

            <LinearLayout
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/albumName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harry Potter"
                    android:textStyle="bold"
                    android:textColor="@color/mainTextColor"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/author"
                    android:alpha="0.6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanushika Vithanage"
                    android:textStyle="bold"
                    android:textColor="@color/mainTextColor"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/category"
                    android:alpha="0.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short Stories"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary"
                    android:textSize="14sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    app:cardBackgroundColor="#00DA8E"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="17.5dp">

                    <TextView
                        android:id="@+id/epiCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:text="EP 50"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tagline"
            android:alpha="0.8"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tagline Goes Here"
            android:textStyle="bold"
            android:textColor="@color/secondTextColor"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/previewText"
            android:layout_marginTop="5dp"
            android:alpha="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:text="Preview text goes here"
            android:textStyle="normal"
            android:textColor="@color/mainTextColor"
            android:textSize="15sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/upgradeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:text="Upgrade to premium"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:backgroundTint="#FF7700"/>

</androidx.cardview.widget.CardView>